{% extends 'adminbase.html.twig' %}

{% block title %}Shelf List{% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowsURL, windowName, windowFeatures ) { window.open(windowsURL, windowName,windowFeatures); }
    </SCRIPT>


                <!-- BEGIN: Subheader -->
                <div class="m-subheader ">
                    <div class="d-flex align-items-center">
                        <div class="mr-auto">
                            <a href="{{ path('admin_shelf_new') }}" class="btn btn-success">Create New Shelf</a>
                            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                                <li class="m-nav__item m-nav__item--home">
                                    <a href="#" class="m-nav__link m-nav__link--icon">
                                        <i class="m-nav__link-icon la la-home"></i>
                                    </a>
                                </li>
                                <li class="m-nav__separator">-</li>
                                <li class="m-nav__item">
                                    <a href="" class="m-nav__link">
                                        <span class="m-nav__link-text">Home</span>
                                    </a>
                                </li>
                                <li class="m-nav__separator">-</li>
                                <li class="m-nav__item">
                                    <a href="" class="m-nav__link">
                                        <span class="m-nav__link-text">Shelf</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- END: Subheader -->
                <div class="m-content">

                    <!--begin::Portlet-->
                    <div class="m-portlet">
                        <div class="m-portlet__head">
                            <div class="m-portlet__head-caption">
                                <div class="m-portlet__head-title">
                                    <h3 class="m-portlet__head-text">
                                        Shelf List
                                    </h3>
                                </div>
                            </div>
                        </div>
                        <div class="m-portlet__body">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ shelf.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ shelf.name }}</td>
                                </tr>
                             
                                <tr>
                                    <th>Products</th>
                                    {% for product in shelf.products %}
                                    <a href="{{path('admin_product_show', {'id': product.id})}}">
                                        <td>{{ product.title }}</td>
                                    </a>
                                    {% endfor %}
                                </tr>
                                
                               

                               
                                </tbody>
                            </table>

                            <a href="{{ path('admin_shelf_index') }}" class="btn btn-info">Back to List</a>

                            <a href="{{ path('admin_shelf_edit', {'id': shelf.id}) }}" class="btn btn-success">Edit</a>

                            {{ include('admin/shelf/_delete_form.html.twig') }}


                        </div>
                    </div>
                </div>

{% endblock %}

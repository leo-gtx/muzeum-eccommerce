
<!-- Start exclusive deal Area -->
	<section class="exclusive-deal-area">
		<div class="container-fluid">
			<div class="row justify-content-center align-items-center">
				<div class="col-lg-6 no-padding exclusive-left">
					<div class="row clock_sec clockdiv" id="clockdiv">
						<div class="col-lg-12">
							<h1>Black Friday Hot Deal Ends Soon!</h1>
							<p>Achetez Ã  bas prix!</p>
						</div>
						<div class="col-lg-12">
							<div class="row clock-wrap">
								<div class="col clockinner1 clockinner">
									<h1 class="days">1</h1>
									<span class="smalltext">Jours</span>
								</div>
								<div class="col clockinner clockinner1">
									<h1 class="hours">00</h1>
									<span class="smalltext">Heure</span>
								</div>
								<div class="col clockinner clockinner1">
									<h1 class="minutes">00</h1>
									<span class="smalltext">Min</span>
								</div>
								<div class="col clockinner clockinner1">
									<h1 class="seconds">00</h1>
									<span class="smalltext">Sec</span>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-6 no-padding exclusive-right">
					<div class="active-exclusive-product-slider">
					{% for product in promotedProducts %}
						
						<!-- single exclusive carousel -->
						<div class="single-exclusive-slider">
							<img class="img-fluid" src="{{ asset('uploads/images/' ~ product.image) | imagine_filter('exclusive_thumb') }}" alt="{{product.slug}}">
							<div class="product-details">
								<div class="price">
									<h6>{{product.price}} FCFA</h6>
									<h6 class="l-through">{{product.price + (product.price * 0.40)}} FCFA</h6>
								</div>
								<h4>{{product.title}}</h4>
								<div class="add-bag d-flex align-items-center justify-content-center">
									<a class="add-btn" href="{{path('shopcart_new', {'productId':product.id})}}"><span class="ti-bag"></span></a>
									<span class="add-text text-uppercase">Ajouter au panier</span>
								</div>
							</div>
						</div>
						
					{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End exclusive deal Area -->
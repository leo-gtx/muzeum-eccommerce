<script>
$("#price-range").on("click",function(){
	$("#productList .single-product").filter(function (index){
		
		if( $(this).data("price") >= parseInt($("#lower-value").text(),10) && $(this).data("price") <= parseInt($("#upper-value").text(),10)){
			$(this).show()
		} else{
